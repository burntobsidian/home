---
import "../global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="burntobsidian's home on the internet" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/burnt-obsidian-logo.svg" />
		<link
			rel="preload"
			href="/fonts/cal-sans.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
	}
</style>
